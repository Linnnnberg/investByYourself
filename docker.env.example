# ======================================
# Docker Environment Configuration Template
# ======================================
# Copy this file to .env and set your actual values
# NEVER commit .env files to version control!

# ======================================
# DATABASE CREDENTIALS
# ======================================
# PostgreSQL Database
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ======================================
# REDIS CACHE
# ======================================
REDIS_PASSWORD=your_secure_redis_password_here

# ======================================
# MINIO OBJECT STORAGE
# ======================================
MINIO_ROOT_PASSWORD=your_secure_minio_password_here
MINIO_SECRET_KEY=your_secure_minio_secret_key_here

# ======================================
# ADMIN TOOLS
# ======================================
# PgAdmin Password
PGADMIN_DEFAULT_PASSWORD=your_secure_pgadmin_password_here

# Grafana Admin Password
GF_SECURITY_ADMIN_PASSWORD=your_secure_grafana_password_here

# ======================================
# API KEYS (External Services)
# ======================================
# Alpha Vantage API Key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Financial Modeling Prep API Key
FMP_API_KEY=your_fmp_api_key_here

# FRED API Key
FRED_API_KEY=your_fred_api_key_here

# Yahoo Finance (no API key required, but rate limiting applies)
YAHOO_FINANCE_API_KEY=

# API Ninjas (optional)
API_NINJAS_API_KEY=your_api_ninjas_key_here

# ======================================
# APPLICATION SETTINGS
# ======================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Debug Mode
DEBUG=true

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ======================================
# ETL CONFIGURATION
# ======================================
ETL_BATCH_SIZE=1000
ETL_MAX_WORKERS=4
ETL_RETRY_ATTEMPTS=3
ETL_RETRY_DELAY=5

# ======================================
# MONITORING
# ======================================
METRICS_ENABLED=true
ALERT_EMAIL=alerts@investbyyourself.com

# ======================================
# Instructions:
# ======================================
# 1. Copy this file to .env
# 2. Replace placeholder values with your actual credentials
# 3. Never commit .env to version control
# 4. Keep your API keys secure
# 5. Use strong, unique passwords for all services
# 6. In production, use proper secret management
# 7. Rotate passwords regularly
